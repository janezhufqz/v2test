<project name="Translate" default="movexx" basedir=".">
    <description>
        Generates language independent properties files
    </description>
   
    <target name="movexx">
        <!-- renames all *_xx.properties to *.properties for translation
        those renamed must never be checked in, as this will delete the _xx files as they are
        not visible anymore.
        After translation comes back the content will be in the _en files-->
        <move todir="${fpath}" includeemptydirs="false">
            <fileset dir="${fpath}"/>
            <mapper type="glob" from="*_xx.properties" to="*.properties"/>
        </move>
    </target>
   
</project>